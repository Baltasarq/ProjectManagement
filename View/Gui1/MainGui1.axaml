<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ProjectMan.View.Gui1.MainGui1"
        MinHeight="400" MinWidth="500"
        Height="400" Width="500"
        Title="(Bad GUI) Project manager">
        <DockPanel>
          <Menu DockPanel.Dock="Top">
              <MenuItem Header="_File">
              <MenuItem Name="OpClose" Header="_Close" />
          </MenuItem>
          <MenuItem Header="_Edit">
              <MenuItem Name="OpStudents" Header="Students"/>
              <MenuItem Name="OpProjects" Header="Projects"/>
          </MenuItem>
          </Menu>
          <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
              <Button Margin="10" Padding="10" Name="BtStudents">Students</Button>
              <Button Margin="10" Padding="10" Name="BtProjects">Projects</Button>
          </StackPanel>
      </DockPanel>
</Window>
