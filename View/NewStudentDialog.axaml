<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        MinHeight="400" MinWidth="500"
        Height="400" Width="500"
        x:Class="ProjectMan.View.NewStudentDialog"
        Title="New Student">
  <StackPanel VerticalAlignment="Center" Margin="10">
    <DockPanel Margin="10">
      <Label Margin="10" DockPanel.Dock="Left">DNI</Label>
      <TextBox Name="EdDNI" Margin="10" />
    </DockPanel>
    <DockPanel Margin="10">
      <Label  Margin="10" DockPanel.Dock="Left">Surname</Label>
      <TextBox Name="EdSurname" Margin="10" />
    </DockPanel>
    <DockPanel Margin="10">
      <Label  Margin="10" DockPanel.Dock="Left">Name</Label>
      <TextBox Name="EdName"  Margin="10" />
    </DockPanel>
    <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Margin="10" Name="BtClose">Close</Button>
      <Button Margin="10" Name="BtSave">Save</Button>
    </StackPanel>
  </StackPanel>
</Window>
